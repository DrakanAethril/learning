{% extends 'base.html.twig' %}

{% block title %}{{'platform.name'|trans}} - {{'section-account.title'|trans}}{% endblock %}

{% block body %}
	<h4 class="fw-bold py-3 mb-4">
		<span class="text-muted fw-light">{{'breadcrumb.account-settings'|trans}} /</span>{{'breadcrumb.account.security'|trans}}
	</h4>

	<div class="row">
		<div class="col-md-12">
			{% include('account/tabs.html.twig') %}
			<div class="card mt-4">
				<h5 class="card-header">{{'account.change-password'|trans}}</h5>
				<div class="card-body">
					{{ form_start(changePasswordForm) }}
						<div class="row">
							{% if formErrors is not empty %}
								{% if formErrors|length %}
									<div class="alert alert-warning" role="alert">
										<ul>
											{% for error in formErrors %}
												<li>{{ error.message }}</li>
											{% endfor %}
										</ul>
									</div>
								{% endif %}
							{% endif %}
							{% if formSuccess is not empty %}
								<div class="alert alert-success" role="alert">
									{{'form.success.generic'|trans}}
								</div>
							{% endif %}
							<div class="mb-3 col-md-6 form-password-toggle">
								<label class="form-label" for="password">{{'form.password.label'|trans}}</label>
								<div class="input-group input-group-merge">
									{{ form_widget(changePasswordForm.plainPassword.first, {
										label: false,
										attr: {
											class: 'form-control',
											placeholder: "************"
										},
										id: "password"
									}) }}
									<span class="input-group-text cursor-pointer">
										<i class="bx bx-hide"></i>
									</span>
								</div>
							</div>
							<div class="mb-3 col-md-6 form-password-toggle">
								<label class="form-label" for="password">{{'form.passwordrepeat.label'|trans}}</label>
								<div class="input-group input-group-merge">
									{{ form_widget(changePasswordForm.plainPassword.second, {
										label: false,
										attr: {
											class: 'form-control',
											placeholder: "************"
										},
										id: "password-repeat"
									}) }}
									<span class="input-group-text cursor-pointer">
										<i class="bx bx-hide"></i>
									</span>
								</div>
							</div>
						</div>
						<input type="hidden" name="_csrf_token" value="{{ csrf_token('change_pwd') }}">
						<input type="submit" class="btn btn-warning" value="{{'form.change-password-btn'|trans}}">
					{{ form_end(changePasswordForm) }}
				</div>
			</div>
		</div>
	</div>
{% endblock %}
