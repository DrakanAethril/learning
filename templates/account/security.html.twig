{% extends 'base.html.twig' %}

{% block title %}Account Security!
{% endblock %}

{% block body %}
	<h4 class="fw-bold py-3 mb-4">
		<span class="text-muted fw-light">Account Settings /</span>
		Security</h4>

	<div class="row">
		<div class="col-md-12">
			{% include('account/tabs.html.twig') %}
			<div class="card">
				<h5 class="card-header">Delete Account</h5>
				<div class="card-body">
					{{ form_start(changePasswordForm) }}
						<div class="row">
							{% if formErrors is not empty %}
								{% if formErrors|length %}
									<div class="alert alert-warning" role="alert">
										<ul>
											{% for error in formErrors %}
												<li>{{ error.message }}</li>
											{% endfor %}
										</ul>
									</div>
								{% endif %}
							{% endif %}
							<div class="mb-3 col-md-6 form-password-toggle">
								<label class="form-label" for="password">{{'form.password.label'|trans}}</label>
								<div class="input-group input-group-merge">
									{{ form_widget(changePasswordForm.plainPassword.first, {
										label: false,
										attr: {
											class: 'form-control',
											placeholder: "************"
										},
										id: "password"
									}) }}
									<span class="input-group-text cursor-pointer">
										<i class="bx bx-hide"></i>
									</span>
								</div>
							</div>
							<div class="mb-3 col-md-6 form-password-toggle">
								<label class="form-label" for="password">{{'form.passwordrepeat.label'|trans}}</label>
								<div class="input-group input-group-merge">
									{{ form_widget(changePasswordForm.plainPassword.second, {
										label: false,
										attr: {
											class: 'form-control',
											placeholder: "************"
										},
										id: "password-repeat"
									}) }}
									<span class="input-group-text cursor-pointer">
										<i class="bx bx-hide"></i>
									</span>
								</div>
							</div>
						</div>
						<input type="hidden" name="_csrf_token" value="{{ csrf_token('change_pwd') }}">
						<input type="submit" class="btn btn-warning text-end" value="Change Password">
					{{ form_end(changePasswordForm) }}
				</div>
			</div>
		</div>
	</div>
{% endblock %}
